---
---
<section x-data="{ allenavigationscards: []}" x-init="allenavigationscards = await (await fetch('navigationscard.json')).json(); allenavigationscards.reverse();" class="mt-10 mb-10 m-10 grid grid-cols-1 sm:grid-cols-1 md:grid-cols-2 lg:grid-cols-2 place-items-center">
  <template x-for="(navigationscard, index) in allenavigationscards.slice(0, 4)" :key="index">
    <a href="#" class="flex gap-6" :class="index % 2 === 0 ? 'mt-8 lg:mt-16' : ''">
      <article class="bg-card-default hover:bg-card-hover active:bg-card-pressed shadow-md text-tekst-tertiary-default hover:text-tekst-tertiary-hover active:text-tekst-tertiary-pressed shadow-surface-secondary-default hover:shadow-surface-highlight-hover active:shadow-surface-highlight-pressed rounded-lg overflow-hidden mb-10 min-w-200 w-96 h-[32rem]">
        <img :src="navigationscard.cardbillede" :alt="navigationscard.cardbilledealt" class="object-cover w-full h-56">
        <article class="navigationscard h-auto flex flex-col justify-between px-8 py-6">
          <h3 class="text-5xl lg:text-5xl font-semibold mb-2" x-text="navigationscard.cardoverskrift"></h3>
          <img src="card_streg.svg" alt="streg på card" class="my-4">
          <p class="text-lg mb-4" x-text="navigationscard.cardbeskrivelse"></p>
          <p class="font-['Londrina_Solid'] text-tekst-accent-lighter hover:text-tekst-accent-default active:text-tekst-accent-darker text-lg">Læs mere</hp>
        </article>
      </article>
    </a>
  </template>
</section>
